<%- model_class = BankTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @bank_transaction.transaction_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:micor_code) %>:</strong></dt>
  <dd><%= @bank_transaction.micor_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bank_account_id) %>:</strong></dt>
  <dd><%= @bank_transaction.bank_account_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bank_transactions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bank_transaction_path(@bank_transaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bank_transaction_path(@bank_transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
