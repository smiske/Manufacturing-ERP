<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Bank transaction</th>
    <th>Total</th>
    <th>Total refund</th>
    <th>Product transaction</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.bank_transaction_id %></td>
    <td><%= transaction.total %></td>
    <td><%= transaction.total_refund %></td>
    <td><%= transaction.product_transaction_id %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

