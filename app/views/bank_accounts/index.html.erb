<%- model_class = BankAccount -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:bank_name) %></th>
      <th><%= model_class.human_attribute_name(:account_number) %></th>
      <th><%= model_class.human_attribute_name(:branch_add) %></th>
      <th><%= model_class.human_attribute_name(:ifsc_code) %></th>

      <th><%= model_class.human_attribute_name(:balance) %></th>


    </tr>
  </thead>
  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= link_to bank_account.id, bank_account_path(bank_account) %></td>
        <td><%= bank_account.bank_name %></td>
        <td><%= bank_account.account_number %></td>
        <td><%= bank_account.branch_add %></td>
        <td><%= bank_account.ifsc_code %></td>

        <td><%= bank_account.balance %></td>



      </tr>
    <% end %>
  </tbody>
</table>

<div class="flickr_pagination">
  <div class="page_info">
    <%= page_entries_info @bank_accounts %>
  </div>
  <%= will_paginate @bank_accounts, :container => false %>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bank_account_path,
            :class => 'btn btn-primary' %>
