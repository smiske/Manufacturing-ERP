<%= form_for @bank_account, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :bank_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :bank_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :account_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :account_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :branch_add, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :branch_add, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ifsc_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ifsc_code, :class => 'number_field' %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :balance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :balance, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bank_accounts_path, :class => 'btn' %>
  </div>
<% end %>
