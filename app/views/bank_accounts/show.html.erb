<%- model_class = BankAccount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:bank_name) %>:</strong></dt>
  <dd><%= @bank_account.bank_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_number) %>:</strong></dt>
  <dd><%= @bank_account.account_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:branch_add) %>:</strong></dt>
  <dd><%= @bank_account.branch_add %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ifsc_code) %>:</strong></dt>
  <dd><%= @bank_account.ifsc_code %></dd>

  <dt><strong><%= model_class.human_attribute_name(:balance) %>:</strong></dt>
  <dd><%= @bank_account.balance %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bank_accounts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bank_account_path(@bank_account), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bank_account_path(@bank_account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
