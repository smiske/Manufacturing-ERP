<%= form_for @tax_invoice, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :PO_number, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :PO_number,options_for_select(@orders.map{|d| [d.PO_number, d.PO_number]}, params[:id3]),{:include_blank => true}, :class => 'number_field' %>
      </div>
    </div>

  <div class="control-group">
    <%= f.label :invoice_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select  :invoice_date, :order => [:day, :month, :year], :class => 'datetime_select' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :invoice_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :invoice_type, options_for_select(@orders.map{|d|[d.product_type, d.product_type] }, :value => params[:id4]), :class => 'text_field' %>
    </div>
  </div>




    <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tax_invoices_path, :class => 'btn' %>
  </div>
<% end %>
